{
  "name": "@eventcatalog/api-generator",
  "version": "1.0.0",
  "description": "A unified API generator for EventCatalog that supports both OpenAPI and AsyncAPI specifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "copy-test-files": "node scripts/copy-test-files.js"
  },
  "keywords": [
    "eventcatalog",
    "openapi",
    "asyncapi",
    "api",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eventcatalog/sdk": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
